extends ../layout.pug 

block content 
  a.btn.btn-success(href='/park/add' role='button') Add Park 
  table 
    thead
      tr
        th(scope='col') Park Name 
        th(scope='col') Location 
        th(scope='col') Opened
    tbody
      each park in parks 
        tr 
          td= park.parkName 
          td= park.city 
          td= park.provinceState 
          td= park.country 
          td= park.opened 
          td
            a.btn.btn-success(href=`/park/${park.id}` role='button') Details