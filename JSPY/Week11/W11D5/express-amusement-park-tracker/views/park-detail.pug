extends layout.pug 

block content 
  h3= park.parkName 
  div 
    ul 
      li #{park.city}, #{park.provinceState} #{park.country}
      li= park.opened 
      li= park.size
  div 
    p= park.description 
  div 
    a(href=`/park/edit/${park.id}`) Edit 
    a(href=`/park/delete/${park.id}`) Delete 
    a(href='/parks') Return to List