mixin textField(labelText, fieldName, fieldValue)
  div 
    label(for= fieldName)= labelText
    input(type="text" id= fieldName name= fieldName value= fieldValue) 

mixin errorsField(errors)
  div(role='alert') 
    p The following error(s) occurred: 
    ul 
      each error in errors 
        li.alert.alert-danger=error